{
  "name": "securio",
  "version": "1.0.0",
  "description": "Une application sécurisée pour chiffrer et déchiffrer vos textes et fichiers",
  "author": "SkY1331",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && copy src\\main.js dist\\main.js",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:build": "electron-builder --win --x64 --config.asar=false --config.win.target=portable --config.win.signAndEditExecutable=false"
  },
  "build": {
    "appId": "com.securio.app",
    "productName": "Securio",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "portable",
      "icon": "public/icon.ico",
      "signAndEditExecutable": false
    },
    "asar": false
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
